<!-- This is code for the unauthed page (main page without logging in) -->

<!-- ARGUMENTS:
    - userCount - estimated user count
    - questionCount - estimated question count -->

<%- include("../partials/header") -%>

<script>

    $(document).ready(() => {
        $('.carousel').carousel({
            interval: 4000,
            pause: "hover"
        });
    });

</script>

<!-- contains login and signup buttons -->
<div class="container">
    <a type="button" class="btn btn-primary float-right mr-2 mt-2" href="/signin">Log In</a>
    <a type="button" class="btn btn-secondary float-right mr-2 mt-2" href="/signup">Sign Up</a>
</div>

<!-- Contains jumbotron box and stuff inside, below login and signup buttons -->
<div class="container mt-3">
    <div class="jumbotron">
        <h1 class="display-2 text-center">We are Mutorials</h1>

        <div id="mu-carousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#mu-carousel" data-slide-to="0" class="active"></li>
                <li data-target="#mu-carousel" data-slide-to="1"></li>
                <li data-target="#mu-carousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100 rounded" src="https://f000.backblazeb2.com/file/mutorials/graphics/Carousel_Physics.png" alt="Physics">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100 rounded" src="https://f000.backblazeb2.com/file/mutorials/graphics/Carousel_Chem.png" alt="Chemistry">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100 rounded" src="https://f000.backblazeb2.com/file/mutorials/graphics/Carousel_Bio.png" alt="Biology">
                </div>
            </div>
            <a class="carousel-control-prev" href="#mu-carousel" role="button" data-slide="prev">
                <!--<span class="carousel-control-prev-icon" aria-hidden="true"></span>-->
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#mu-carousel" role="button" data-slide="next">
                <!--<span class="carousel-control-next-icon" aria-hidden="true"></span>-->
                <span class="sr-only">Next</span>
            </a>
        </div>

        <p class="mt-4">Mutorials is a free, adaptive science trainer suited to individual needs.<br>We strive to keep students motivated, and to make them academically excellent.</p>
        <p>Currently supporting <strong><%= userCount %></strong> users with a database of <strong><%= questionCount %></strong> questions.</p>

        <footer class="center"><br><hr><br>Copyright Â© 2020 The Mu Foundation. All Rights Reserved.</footer>
    </div>
</div>

<%- include("../partials/footer") -%>
