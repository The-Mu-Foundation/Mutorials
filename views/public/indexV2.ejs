<%# "Wide coverage" -> subjects %>
<div class="flex flex-col items-center max-w-4xl my-10">
  <h2 class="mb-2">Wide coverage</h2>
  <h3 class="mb-4">Four core subjects with 60 distinct units.</h3>

  <div class="flex gap-4">
    <% for (let [subject, unitCount, image] of [
      ['Physics', 15, 'https://cdn.mutorials.org/images/icons/Physics_Main.svg'],
      ['Chemistry', 15, 'https://cdn.mutorials.org/images/icons/Chem_Main.svg'],
      ['Biology', 15, 'https://cdn.mutorials.org/images/icons/Bio_Main.svg'],
      ['Earth & Space', 15, 'https://images.unsplash.com/photo-1634176866089-b633f4aec882'],
    ]) {%>
      <div class="flex flex-col items-center w-1/4">
        <img class="mb-2 object-cover rounded-md" src="<%= image %>" draggable="false">
        <h3 class="mb-0 text-sm sm:text-normal text-center font-bold"><%= subject %></h3>
        <p><%= unitCount %> units</p>
      </div>
    <% } %>
  </div>
</div>

<%# Stats %>
<div class="flex justify-center max-w-4xl my-10 gap-4">
  <% for (let [quantity, label, id] of [
    [3310, 'questions with solutions', 'question-count'],
    [412, 'unique tags', 'tag-count'],
    [29767, 'total solves', 'solve-count']
  ]) { %>
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        var c = new countUp.CountUp(
          `sitestat-<%= id %>`,
          '<%= quantity %>',
          { enableScrollSpy: true, scrollSpyOnce: true, scrollSpyDelay: 200 }
        );
        c.start();
      })
    </script>
    <div class="flex flex-col items-center w-48">
      <h1 class="font-extrabold text-blue-600" id="sitestat-<%= id %>"><%= quantity %></h1>
      <p><%= label %></p>
    </div>
  <% } %>
</div>

