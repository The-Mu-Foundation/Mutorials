<%# This is a header template %>

<!doctype html>

<html lang="en">

<head>

    <%# Site data %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <% try { %>
        <%# EJS idiosyncrasies - the JS || operator and ternary operator both crash the page when pageName isn't defined %>
        <%# existenceTest will test whether pageName exists, and will then throw an error %>
        <%# A test is used because otherwise a stray <title> tag appears in the output %>
        <% let existenceTest = pageName; %>
        <title><%= pageName %></title>
    <% } catch(err) { %>
        <title>Mutorials</title>
    <% } %>
    <link rel="icon" href="https://f000.backblazeb2.com/file/mutorials/icons/Icon_Main.svg" sizes="any"
        type="image/svg+xml">

    <%# JQuery and bootstrap imports %>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>

    <%# Fontawesome import %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/63ec6f8c9f.js" crossorigin="anonymous"></script>

    <%# Mathjax import %>
    <script src="https://polyfill.io/v3/polyfill.min.js?features=es6"></script>
    <script id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>
    <script>
        window.MathJax = {
            tex: {
                inlineMath: [['$', '$'], ['$$', '$$']]
            }
        };
    </script>

    <%# Chartjs import %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
    <script>
        var canvascontainerlist = document.getElementsByClassName("canvas-container-center");
        for (i = 0; i < canvascontainerlist.length; i++) {
            var parentStyle = canvascontainerlist[i].style;
            parentStyle.textAlign = "center";
            parentStyle.width = "100%";
        }
    </script>

    <%# Custom CSS for site %>
    <style>

        <% if (locals.darkMode) { %>
            body {
                background-color: #37393f;
            }

            .jumbotron {
                background-color: #414449;
            }

            .card-body {
                background-color: #37393f;
            }

            .form-control {
                background-color: #414449 !important;
                color: #ffffff !important;
            }

            .modal-header, .modal-body, .modal-footer {
                background-color: #37393f;
            }

            * {
                color: #ffffff;
            }
        <% } %>

        .card {
            margin-top: 50px;
        }

        .carousel-inner > .item > img { width:90%; height:570px; }

        .icon-bar {
            position: fixed;
            top: 30%;
            -webkit-transform: translateY(-50%);
            -ms-transform: translateY(-50%);
            transform: translateY(-50%);
        }
        .icon-bar a {
            display: block;
            text-align: center;
            padding: 16px;
            transition: all 0.3s ease;
            color: white;
            font-size: 20px;
        }
        .icon-bar a:hover {
            background-color: #000;
        }

        input[type=number]::-webkit-outer-spin-button, input[type=number]::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        input[type=number] {
            -moz-appearance:textfield;
        }
        .facebook {
            background: #3B5998;
            color: white;
        }
        .twitter {
            background: #55ACEE;
            color: white;
        }
        .google {
            background: #dd4b39;
            color: white;
        }
        .linkedin {
            background: #007bb5;
            color: white;
        }
        .youtube {
            background: #bb0000;
            color: white;
        }
        /* Facebook to youtube aren't used as of rn*/
        .instagram {
            background: #bc2a8d;
            color: white;
        }
        .discord {
            background:#7289DA;
            color: white;
        }
        .github {
            background:#696969;
            color: white;
        }

        .crop {
            height: 286px;
            width: 286px;
            overflow: hidden;
        }
        /*.crop-img {
            height: auto;
            width: 286px;
        }*/

    </style>
    <% if (locals.darkMode) { %>
    <script>
        Chart.defaults.global.defaultFontColor = "#ffffff";
    </script>
    <% } %>

</head>

<body>
