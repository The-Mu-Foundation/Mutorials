{
    "version": 2,
    "builds": [
        {
            "src": "./index.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/css/tailwind.css",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "public/css",
                "buildCommand": "npm run build"
            }
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/"
        }
    ],
    "buildCommand": "npm run build"
}